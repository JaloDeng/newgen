<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.newgen.backmanager.mapper.AdminMapper" >

	<!-- Result Map-->
	<resultMap id="BaseResultMap" type="com.newgen.backmanager.bean.Admin" >
		<result column="id" property="id" />
		<result column="deptid" property="deptid" />
		<result column="usercode" property="usercode" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="position" property="position" />
		<result column="address" property="address" />
		<result column="phone" property="phone" />
		<result column="email" property="email" />
		<result column="roleid" property="roleid" />
		<result column="islock" property="islock" />
		<result column="flag" property="flag" />
		<result column="openid" property="openid" />
	</resultMap>
	
	<!-- sys_user table all fields -->
	<sql id="Base_Column_List" >
		id, deptid, usercode, username, password, position, address, phone, email, roleid, islock, flag, openid
	</sql>
	
	<select id="findList" parameterType="Object" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> 
		from t_activity_role
		<if test="index != null and row != null">
			limit ${index}, ${row}
		</if>
	</select>
	
	<select id="queryById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> 
		from t_admin
		where id = #{value}
	</select>
	
	<select id="findByUserName">
		select <include refid="Base_Column_List" /> 
		from t_admin
		where username = #{username}
	</select>

</mapper>